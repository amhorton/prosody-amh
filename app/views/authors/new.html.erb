<h2>New Author</h2>

<form action="<%= authors_url %>" method="POST">

  <%= auth_token %>

  <label>
    First Name
    <input type="text" name="author[first_name]" value="<%= @author.first_name %>">
  </label>
  <label>
    Last Name
    <input type="text" name="author[last_name]" value="<%= @author.last_name %>">
  </label>
  <button>Submit</button>

</form>