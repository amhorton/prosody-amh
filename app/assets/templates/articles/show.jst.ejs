<style>

/* CLEARFIX */
.group:after {
  content: "";
  clear: both;
  display: block;
}

section.main {
  display: block;
  width: 1300px;
  height: 100%;
  margin: 0 auto;
  font-family: inherit;
}

/* Header Styles */

header {
  width: 900px;
  height: 180px;
  display: block;
  margin: 0 auto;
  text-align: center;
}

header > h2 {
  font-size: 40px;
}

header > h3 {
  font-size: 30px;
}

header > big {
  font-size: 25px;
}

header > .vote {
  font-size: 25px;
  color: #efcafa;
  padding: 0 10px;
}

header > .inactive {
  color: #bbb;
}

header > .inactive:hover {
  color: #caeffa;
}



/* Article Text, Links, and Popup */

div.article-text {
  display: relative;
  border-right: 4px solid #ccc;
  width: 736px;
  height: 100%;
  padding: 20px;
  float: left;
  font-size: 24px;
}

.article-text > .annotation-link {
  color: #efcafa;
}

.article-text > .annotation-link:hover {
  color: #caeffa;
}
div.article-text > .popup {
  display: none;
  position: absolute;
  top: 0;
  left: 0;
  width: 60px;
  height: 60px;
  font-size: 60px;
  padding: 5px 10px 15px 10px;
  color: #000;
  background: #efcafa;
  text-align: center;
  border-radius: 7px;
}

div.article-text > .popup:hover {
  background: #caeffa;
}

/* Sidebar */

div.annotations-sidebar {
  width: 480px;
  height: 100%;
  padding: 20px;
  float: right;
}

div.annotation-view {
  width: 440px;
  padding: 10px;
  position: absolute;
  display: none;
}

div.annotation img {
  margin: 0 auto;
  width: 400px;
}

</style>

<% if (article.get('text')) { %>
  <section class="main group">

    <div class="article">

      <header>
        <h2><%= article.get('title') %></h2>
        <h3>
          By <a>
            <%= article.author().get("name") %></a>, <%= article.get('year') %>
        </h3>
        <% if (Prosody.currentUserId) { %>
          <a class="down vote inactive">∇</a>
          <big><%= article.get('total_votes') %></big>
          <a class="up vote inactive">∆</a>
        <% } %>
      </header>

      <div class="article-text">

        <% article.get('text').split("\n").forEach(function (line) { %>
          <%= line.replace("\r", "") %>
          <br>
        <% }) %>

        <a class="popup">⌽</a>

      </div>
    </div>



    <div class="annotations-sidebar">

      <div class="annotation-view"></div>

    </div>

  </section>

  <hr>
  <a href="#top">Back to top</a>
<% } %>