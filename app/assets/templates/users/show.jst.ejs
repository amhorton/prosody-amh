  <br>

  <h4>Followers</h4>

  <% user.get("followers").forEach(function (follower) { %>

    <a href="/#users/<%= follower['id'] %>">
      <img class="follower-image" src="<%= follower['avatar'] %>">
    </a>


  <% }); %> -->


<% } %>