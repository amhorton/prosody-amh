<div class="annotation">

  <h3 class="annotation-title"><%= annotation.escape('snippet') %></h3>
  <article class="annotation-text">
    <%= annotation.escape('text') %>
    --<a href="/#users/<%= annotation.user().id %>"><small><%= annotation.user().escape("username") %></small></a>
  </article>

  <% if (annotation.get('image') && annotation.get('image').indexOf("missing") === -1) { %>
      <img src="<%= annotation.get('image') %>">
  <% } %>

  <div class="vote-buttons"></div>

  <div class="new-comment"></div>

  <div class="comments"></div>

</div>